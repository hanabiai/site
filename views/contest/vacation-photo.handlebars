<div class="formContainer">
    <form class="form-horizontal" role="form" method="POST" enctype="multipart/form-data" 
        action="/contest/vacation-photo/{{year}}/{{month}}">
        <div class="form-group">
            <label for="fieldName" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="fieldName" name="fieldName">
            </div>
        </div>
        <div class="form-group">
            <label for="fieldEmail" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-4">
                <input type="email" class="form-control" id="fieldEmail" name="fieldEmail" required>
            </div>
        </div>
        <div class="form-group">
            <label for="fieldPhoto" class="col-sm-2 control-label">Vacation Photo</label>
            <div class="col-sm-4">
                {{!--using formidable npm package--}}
                <input type="file" class="form-control" id="fieldPhoto" name="fieldPhoto" accept="image/*" required >                
            </div>            
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </div>
    </form>
</div>