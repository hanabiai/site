{{#section 'head'}}
    {{!--we want Google to ignore this page--}}
    <meta name="robots" content="noindex">
{{/section}}
<h1>Request Group Rate</h1>
<form class="form-horizontal newsletterForm" role="form" action="/tours/request-group-rate" method="POST">
    <input type="hidden" name="_csrf" value="{{_csrfToken}}">
    <input type="hidden" name="referer">
    <div class="form-group">
        <label for="fieldName" class="control-label">Name:</label>
        <input type="text"  class="form-control" id="fieldName" name="fieldName">
    </div>
    <div class="form-group">
        <label for="groupSize" class="control-label">Group size:</label>
        <input type="text"  class="form-control" id="groupSize" name="groupSize">
    </div>
    <div class="form-group">
        <label for="email" class="control-label">Email:</label>
        <input type="email"  class="form-control" id="email" name="email">
    </div>
    <input type="submit" value="Submit">
</form>
{{#section 'jquery'}}
    <script>
        $(document).ready(function(){
            $('input[name="referer"]').val(document.referer);
        });
    </script>
{{/section}}