<h1>Your Shopping Cart <small>[Ur Currency: <b>{{currency}}</b>]</small></h1>
{{#each cart.errors}}
	<div class="alert alert-danger">{{.}}</div>
{{/each}}
{{#each cart.warnings}}
	<div class="alert alert-warning">{{.}}</div>
{{/each}}

<div class="container-fluid cart">
	<div class="row">
		<div class="col-xs-6 text-center">Vacation</div>
		<div class="col-xs-2 text-center">Unit Price</div>
		<div class="col-xs-2 text-center">Guests</div>
		<div class="col-xs-2 text-center">Total</div>
	</div>
	{{#each cart.items}}
	<div class="row">
		<div class="col-xs-6">{{vacation.name}}</div>
		<div class="col-xs-2 text-right">{{price}}</div>
		<div class="col-xs-2 text-right">{{guests}}</div>
		<div class="col-xs-2 text-right">{{totalPrice}}</div>
	</div>
	{{/each}}
	<div class="row">
		<div id="cart_sum" class="col-xs-12 text-right">{{cart.sum}}</div>
	</div>
</div>
<p></p>
<p>
	<a href="/cart/checkout" class="btn btn-primary">Checkout</a>
	<a href="/vacation" class="btn btn-info">Add other</a>
</p>

